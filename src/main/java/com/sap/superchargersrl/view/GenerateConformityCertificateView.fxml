<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sap.superchargersrl.controller.GenerateConformityCertificateController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Generar Certificado de Conformidad" style="-x-font-smoothing-type: gasp; -fx-font-size: 36px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>

    <ComboBox fx:id="customerComboBox" promptText="Seleccionar Cliente" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="vehicleInfoField" promptText="Información del Vehículo" editable="false" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="servicePerformedField" promptText="Servicio Realizado" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextArea fx:id="additionalNotesArea" promptText="Notas Adicionales" prefRowCount="4" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="certificationNumberField" promptText="Número de Certificación" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>

    <Button text="Generar Certificado" onAction="#handleGenerateCertificate"
            style="-x-font-smoothing-type: gasp; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
</VBox>