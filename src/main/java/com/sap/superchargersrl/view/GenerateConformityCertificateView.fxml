<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sap.superchargersrl.controller.GenerateConformityCertificateController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Generate Conformity Certificate" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <ComboBox fx:id="customerComboBox" promptText="Select Customer"/>
    <TextField fx:id="vehicleInfoField" promptText="Vehicle Information" editable="false"/>
    <TextField fx:id="servicePerformedField" promptText="Service Performed"/>
    <TextArea fx:id="additionalNotesArea" promptText="Additional Notes" prefRowCount="4"/>
    <TextField fx:id="certificationNumberField" promptText="Certification Number"/>

    <Button text="Generate Certificate" onAction="#handleGenerateCertificate"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>