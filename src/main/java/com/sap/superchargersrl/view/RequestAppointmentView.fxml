<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sap.superchargersrl.controller.RegistrarTurnosController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Solicitar Cita" style="-x-font-smoothing-type: gasp; -fx-font-size: 36px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>

    <TextField fx:id="customerNameField" promptText="Nombre del Cliente" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="vehicleModelField" promptText="Modelo del Vehículo" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="vehiclePlateField" promptText="Número de Matrícula del Vehículo" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <DatePicker fx:id="appointmentDatePicker" promptText="Fecha de la Cita" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>

    <Button text="Enviar Solicitud" onAction="#handleSubmitRequest"
            style="-x-font-smoothing-type: gasp; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
</VBox>