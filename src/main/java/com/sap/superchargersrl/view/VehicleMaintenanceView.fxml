<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sap.superchargersrl.controller.VehicleMaintenanceController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Mantenimiento del Vehículo" style="-x-font-smoothing-type: gasp; -fx-font-size: 36px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>

    <ComboBox fx:id="customerComboBox" promptText="Seleccionar Cliente" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="vehicleInfoField" promptText="Información del Vehículo" editable="false" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <DatePicker fx:id="maintenanceDatePicker" promptText="Fecha de Mantenimiento" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="mileageField" promptText="Kilometraje Actual" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <ComboBox fx:id="serviceTypeComboBox" promptText="Tipo de Servicio" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextArea fx:id="serviceDetailsArea" promptText="Detalles del Servicio" prefRowCount="4" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="partReplacedField" promptText="Piezas Reemplazadas (si hay)" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
    <TextField fx:id="technicianField" promptText="Nombre del Técnico" style="-x-font-smoothing-type: gasp; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>

    <Button text="Registrar Mantenimiento" onAction="#handleRecordMaintenance"
            style="-x-font-smoothing-type: gasp; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-family: 'Verdana'; -fx-font-weight: bold;"/>
</VBox>