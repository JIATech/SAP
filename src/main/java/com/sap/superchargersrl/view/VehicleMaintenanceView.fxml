<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sap.superchargersrl.controller.VehicleMaintenanceController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Vehicle Maintenance" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <ComboBox fx:id="customerComboBox" promptText="Select Customer"/>
    <TextField fx:id="vehicleInfoField" promptText="Vehicle Information" editable="false"/>
    <DatePicker fx:id="maintenanceDatePicker" promptText="Maintenance Date"/>
    <TextField fx:id="mileageField" promptText="Current Mileage"/>
    <ComboBox fx:id="serviceTypeComboBox" promptText="Service Type"/>
    <TextArea fx:id="serviceDetailsArea" promptText="Service Details" prefRowCount="4"/>
    <TextField fx:id="partReplacedField" promptText="Parts Replaced (if any)"/>
    <TextField fx:id="technicianField" promptText="Technician Name"/>

    <Button text="Record Maintenance" onAction="#handleRecordMaintenance"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>