<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sap.superchargersrl.controller.RegisterAttendanceController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Register Attendance" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <DatePicker fx:id="attendanceDatePicker" promptText="Attendance Date"/>
    <ComboBox fx:id="employeeComboBox" promptText="Select Employee"/>
    <TextField fx:id="timeInField" promptText="Time In (HH:MM)"/>
    <TextField fx:id="timeOutField" promptText="Time Out (HH:MM)"/>
    <TextField fx:id="notesField" promptText="Notes (optional)"/>

    <Button text="Register Attendance" onAction="#handleRegisterAttendance"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>