<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sap.superchargersrl.controller.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="Supercharger SRL Management System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

  <VBox spacing="10" alignment="CENTER">
    <Button fx:id="requestAppointmentButton" text="Request Appointment" onAction="#handleRequestAppointment"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="Infinity"/>
    <Button fx:id="assignAppointmentButton" text="Assign Appointment" onAction="#handleAssignAppointment"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="Infinity"/>
    <Button fx:id="registerAttendanceButton" text="Register Attendance" onAction="#handleRegisterAttendance"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="Infinity"/>
    <Button fx:id="generateConformityCertificateButton" text="Generate Conformity Certificate" onAction="#handleGenerateConformityCertificate"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="Infinity"/>
    <Button fx:id="vehicleMaintenanceButton" text="Vehicle Maintenance" onAction="#handleVehicleMaintenance"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="Infinity"/>
    <Button fx:id="generateMonthlyReportButton" text="Generate Monthly Report" onAction="#handleGenerateMonthlyReport"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="Infinity"/>
  </VBox>
</VBox>